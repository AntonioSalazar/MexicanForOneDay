<div style="margin: 100px">
  <img src="{{tour.imgPath}}" alt="">
    <br>
  {{tour.title}}
    <br>
  {{tour.username}}
    <br>
  {{tour.descriptionPreview}}
    <br>
  {{tour.description}}
    <br>
  <p>La duracion aproximada del tour es de: {{tour.duration}} horas</p>
    <br>
  <p>Some tips</p>
    <br>
  {{tour.tips}}
    <br>

  <p>Deja un comentario: </p>
  <form action="/reviews/add?tour_id={{tour._id}}" method="post">
    <label for="">Usuario:</label>
    <input type="text" name="user">

    <label for="">Comentario:</label>
    <textarea type="text" name="comments"></textarea>

    <button type="submit">Publicar</button>

    
  </form>

  <h2>Reviews</h2>
  {{#each tour.reviews}}
  <div class="review-item">
    <h4>{{this.user}}</h4>
    <h5>{{this.comments}}</h5>
  </div>
  {{else}}
    <h4>No comments yet</h4>
  {{/each}}
</div>