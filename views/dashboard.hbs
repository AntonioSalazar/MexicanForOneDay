
<div id="experience-container">
  <h1>Own experiences</h1>
  {{#each tours}}
  <div id="own-experience-div">
      {{#ifCond tourType "experience" }}
      <a href="/detail_experience/{{this._id}}">
        <img src="{{this.imgPath}}" alt="" id="img-experience">
        <h6>{{this.descriptionPreview}}</h6>
        <h4>{{this.title}}</h4>
      </a>
      <h4>Calificacion: {{this.rate}}</h4>
      {{/ifCond}}
      {{else}}
        <h2>No experieces yet :(</h2>
  </div>
  <br>
  {{/each}}
    <a href="/experience/add">Añade tu propia experiencia:</a>
</div>

