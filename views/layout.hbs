<body>



       {{#if isLogged}}
     <nav class="navbar navbar-expand-md sticky-top navbar-dark">
       <div class="collapse navbar-collapse" id="collapse_target">
         <a href="/" class="navbar-brand"><img src="../images/logo-img.png" alt=""></a>
         <div id="nav-links">
           <ul class="navbar-nav">
            <li class="nav-item" style="width: 250px">
               <span style="color: white">{{loggedUser.username}}</span>
             </li>
             <li class="nav-item" >

                 <div class="dropdown">
                  <button class="btn btn-default dropdown-toggle" type="button" id="profile-logo" data-toggle="dropdown">
                  <img src="../images/user.svg">
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/profile/{{loggedUser._id}}" style="color:black">Tu Perfil</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/profile/edit?user_id={{loggedUser._id}}" style="color:black">Edita tu perfil</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/dashboard" style="color:black">Menu principal</a></li>
                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/logout" style="color:black">Cerrar sesion</a></li>
                  </ul>
                </div>
             </li>
           </ul>
           </div>
      </div>
    </nav>

       {{else}}
      <nav class="navbar navbar-expand-md sticky-top navbar-dark">
       <div class="collapse navbar-collapse" id="collapse_target">
         <a href="/" class="navbar-brand"><img src="../images/logo-img.png" alt=""></a>
         <div id="nav-links">
           <ul class="navbar-nav">
             <li class="nav-item">
               <a class="nav-link" href="#look-for-tour" >Look for a Tour</a>
             </li>
             <li class="nav-item">
               <a class="nav-link" href="#about-us">About us</a>
             </li>
             <li class="nav-item">
               <a class="nav-link" href="#our-trips">Our Trips</a>
             </li>
           </ul>
           </div>
       </div>
      </div>
    </nav>

       {{/if}}


